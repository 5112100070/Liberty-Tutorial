<?xml version="1.0" encoding="UTF-8"?>
<server description="Server 1 (Account Service)">

    <!-- Enable features -->
    <featureManager>
        <feature>webProfile-8.0</feature>
        <feature>jaxrs-2.1</feature>
        <feature>jsonp-1.1</feature>
        <feature>cdi-2.0</feature>
        <feature>monitor-1.0</feature>
    </featureManager>

    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint id="defaultHttpEndpoint"
                  httpPort="9080"
                  httpsPort="9443" />

    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>

    <!-- Default SSL configuration enables trust for default certificates from the Java runtime -->
    <keyStore id="defaultKeyStore" location="resources/security/mycert.p12" password="Rahasia123"/>
    <ssl id="defaultSSLConfig" keyStoreRef="defaultKeyStore"/>

    <application id="account-service-1" name="Account Service Backend (internal)" type="war" context-root="/accounts" location="account-service.war"/>
    <application id="account-service-2" name="Account Service Backend (external)" type="war" context-root="/accounts-external" location="account-service.war"/>

</server>